                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/chenDetachedaddy5price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/detachedaddy5price"
                    android:textSize="15dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/chenDetachedckb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/chenDetachednxtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/detachednxtbtn"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>